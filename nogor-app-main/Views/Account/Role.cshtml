
@{
    ViewData["Title"] = "রোল";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
	<section class="container">
		<div class="row">
			<div class="col-md-12">
				<h1>বিভাগ পরিচালনা করুন</h1>
			</div>
			<div class="col-md-12">
				<div class="crumbs">
					<a asp-action="Index" asp-controller="Home">হোম</a>
					<span class="crumbs-span">/</span>
                    <a asp-action="Index" asp-controller="Account">আকাউন্ট</a>
                    <span class="crumbs-span">/</span>
					<span class="current">বিভাগ</span>
				</div>
			</div>
		</div><!-- End row -->
	</section><!-- End container -->
</div><!-- End breadcrumbs -->

<section class="container main-content">
    <div class="row">
        <div class="col-xl-12">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="mb-5">
                                <h4 class="card-title" style="float:left;">বিভাগ সমূহ</h4>
                                <button type="button" class="btn btn-primary waves-effect waves-light" data-bs-toggle="modal" data-bs-target="#myModal" id="modalOpen" style="float:right;">
                                    বিভাগ যোগ করুন
                                </button>
                            </div>
                            <hr />
                            <table id="tblCategory" class="table table-bordered dt-reaponsive" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th>বিভাগের নাম</th>
                                        <th width="15%">ক্রিয়া</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end row -->


<div id="myModal" class="modal fade" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="crdTitle">বিভাগ যোগ করুন</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="icoReset"></button>
            </div>
            <div class="modal-body">
                <form id="roleForm" method="post" onsubmit="return false;">
                    <div class="row">
                        <input type="hidden" id="hiddenText" value=""/>
                        <div class="form-group mb-2">
                            <label for="Name">নাম</label>
                            <input type="text" id="Name" name="Name" class="form-control" autocomplete="off" />
                        </div>

                    </div>

                    <button type="submit" id="btnSave" class="btn btn-primary mr-1 waves-effect waves-light">তৈরি করুন</button>

                    <button type="reset" id="btnReset" class="btn btn-danger mr-1 waves-effect waves-light" style="display:none">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

@section Scripts{
    <script src="~/lib/role.js"></script>
}

<style>
    input[type="text"], input[type="password"], input[type="email"], textarea, select{
        width: 100%;
    }

    label.error {
        margin-left: 0px;
        margin-bottom: 10px;
    }
    i{
        font-size:20px;
    }
    body{
        font-size:12px;
    }
</style>

