@model RoleViewModel

@{
    ViewData["Title"] = "রোল সম্পাদন করুন";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int i = 1;
}

<div class="breadcrumbs">
	<section class="container">
		<div class="row">
			<div class="col-md-12">
				<h1>বিভাগ সম্পাদন করুন</h1>
			</div>
			<div class="col-md-12">
				<div class="crumbs">
					<a asp-action="Index" asp-controller="Home">হোম</a>
					<span class="crumbs-span">/</span>
                    <a asp-action="Index" asp-controller="Account">আকাউন্ট</a>
                    <span class="crumbs-span">/</span>
                    <a asp-action="role" asp-controller="Account">বিভাগ</a>
                    <span class="crumbs-span">/</span>
					<span class="current">বিভাগ সম্পাদন করুন</span>
				</div>
			</div>
		</div><!-- End row -->
	</section><!-- End container -->
</div><!-- End breadcrumbs -->

<section class="container main-content">
	<div class="row">
        <div class="col-xl-12">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="mb-5">
                                <h4 class="card-title" style="float:left;">বিভাগের একাউন্ট সমূহ</h4>
                                <a class="btn btn-primary waves-effect waves-light float-end" asp-action="AssignRole" asp-route-Id="@Model.Id">
                                    একাউন্ট যোগ বা রিমুভ করুন
                                </a>
                            </div>
                            <hr />
                            <table id="tbldata" class="table table-bordered dt-reaponsive" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th width="5%">নং</th>
                                        <th>ইমেল</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Users)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@item</td>
                                        </tr>
                                    }    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->
</section>
<!-- end row -->

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
	        $('#tbldata').DataTable();
        });
    </script>
}