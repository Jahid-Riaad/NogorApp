@model List<UserRoleViewModel>

@{
    ViewData["Title"] = "রোল প্রধান করুন";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int j = 1;
}

<div class="breadcrumbs">
	<section class="container">
		<div class="row">
			<div class="col-md-12">
				<h1>বিভাগের একাউন্ট সম্পাদন করুন</h1>
			</div>
			<div class="col-md-12">
				<div class="crumbs">
					<a asp-action="Index" asp-controller="Home">হোম</a>
					<span class="crumbs-span">/</span>
                    <a asp-action="Index" asp-controller="Account">আকাউন্ট</a>
                    <span class="crumbs-span">/</span>
                    <a asp-action="Role" asp-controller="Account"> বিভাগ </a>
                    <span class="crumbs-span">/</span>
                    <a asp-action="UsersInRole" asp-controller="Account" asp-route-id="@ViewBag.roleId"> বিভাগ সম্পাদন</a>
                    <span class="crumbs-span">/</span>
					<span class="current">বিভাগের একাউন্ট সম্পাদন</span>
				</div>
			</div>
		</div><!-- End row -->
	</section><!-- End container -->
</div><!-- End breadcrumbs -->

<section class="container main-content">
	<div class="row">
        <div class="col-xl-12">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="mb-5">
                                <h4 class="card-title" style="float:left;">একাউন্ট সমূহ</h4>
                            </div>
                            <hr />
                            <form method="post">
                                <input type="hidden" value="@ViewBag.roleId" name="roleId" />
                                    <table id="tbldata" class="table table-bordered dt-reaponsive" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th width="5%">নং</th>
                                            <th width="5%">নির্বাচন</th>
                                            <th>নাম</th>
                                            <th>ইমেল</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            <tr>
                                                <td>@(j++)</td>
                                                <td>
                                                    <input asp-for="@Model[i].IsSelected"/>
                                                </td>
                                                <td>@Model[i].Name</td>
                                                <td>
                                                    <label asp-for="@Model[i].IsSelected">
                                                        @Model[i].UserName
                                                    </label>
                                                    <input type="hidden" asp-for="@Model[i].UserId" />
                                                    <input type="hidden" asp-for="@Model[i].UserName" />
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <div class="form-group">
                                    <input type="submit" value="আপডেট" class="btn btn-primary"
                                            style="width:auto" />
                                    <a asp-action="UsersInRole" asp-route-id="@ViewBag.roleId"
                                        class="btn btn-primary" style="width:auto">বাতিল</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->
</section>
<!-- end row -->

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
	        $('#tbldata').DataTable();
        });
    </script>
}