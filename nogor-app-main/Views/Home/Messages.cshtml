<section class="container main-content">
	<div class="row">
        <div class="col-xl-12">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="mb-5">
                                <h4 class="card-title" style="float:left;">বার্তা সমূহ</h4>
                            </div>
                            <hr />
